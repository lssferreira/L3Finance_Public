@inherits LayoutComponentBase

<MudThemeProvider Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Surface" Fixed="true" Elevation="2">
        <MudSpacer />
        <MudText Typo="Typo.h6">L3Finance</MudText>
        <MudSpacer />
        <MudIconButton Href="https://github.com/lssferreira" Target="_blank" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="3">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent class="main-content pa-10">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme currentTheme = new MudTheme()
        {
            Palette = L3FinancePallete.CreatePallete
        };

    private MudTheme _theme = new();
    private bool _isDarkMode = true;
}